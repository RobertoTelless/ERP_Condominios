                                                    @Html.ValidationMessageFor(m => m.MAPR_QN_ESTOQUE_MAXIMO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Estoque Mínimo*
                                                    @Html.TextBoxFor(m => m.MAPR_QN_QUANTIDADE_M, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.MAPR_QN_QUANTIDADE_M, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Reserva de Estoque*
                                                    @Html.TextBoxFor(m => m.MAPR_QN_RESERVA_ESTOQUE, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.MAPR_QN_RESERVA_ESTOQUE, "", new { @style = "color:red" })
                                                </div>
