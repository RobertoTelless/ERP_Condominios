                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Preço (R$)
                                                    @Html.TextBoxFor(m => m.MPPR_VL_PRECO, new { @class = "form-control", autofocus = true, id = "preco" })
                                                    @Html.ValidationMessageFor(m => m.MPPR_VL_PRECO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    <br />
                                                    <span class="btn btn-success btn-sm" onclick="incluiPrecoMateria($('select#fili option:selected').val(), $('select#fili option:selected').text(), $('#preco').val())">Incluir Preço</span>
