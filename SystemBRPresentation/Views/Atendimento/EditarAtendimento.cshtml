                    </div>
                    <div class="col-xs-9 text-right">
                        <h3 class="font-normal">@ViewBag.Prior</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 @ViewBag.CorSLA">
                <div class="row vertical-align">
                    <div class="col-xs-3">
                        <i class="fa fa-clock-o fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h3 class="font-normal">@ViewBag.MsgSLA</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Atendimento - Edição</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    @if (ViewBag.TarefaAgen != null && ViewBag.TarefaAgen == 1)
                    {
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            Tarefa cadastrada com sucesso!
                        </div>
                    }
                    <row>
                        <div class="form-group">
                            @Html.ButtonLinkIndex(text: "Gerar Relatório", action: "GerarRelatorioAtendimento", controller: "Atendimento")
                            @*@if (Model.ATEN_IN_STATUS == 1 || Model.ATEN_IN_STATUS == 2)
        {
            @Html.ButtonLinkIndex(text: "Ativar", action: "AtivarAtendimento", controller: "Atendimento")
        }
        @if (Model.ATEN_IN_STATUS == 4)
        {
            @Html.ButtonLinkIndex(text: "Suspender", action: "SuspenderAtendimento", controller: "Atendimento")
        }*@
                            @if (Model.ATEN_IN_STATUS == 1 || Model.ATEN_IN_STATUS == 2 || Model.ATEN_IN_STATUS == 4)
                            {
                                @Html.ButtonLinkIndex(text: "Cancelar", action: "CancelarAtendimento", controller: "Atendimento")
                            }
                            @if (Model.ATEN_IN_STATUS == 1 || Model.ATEN_IN_STATUS == 2 || Model.ATEN_IN_STATUS == 4)
                            {
                                @Html.ButtonLinkIndex(text: "Encerrar", action: "EncerrarAtendimento", controller: "Atendimento")
                            }

                            @if ((Model.ORDEM_SERVICO == null || Model.ORDEM_SERVICO.Count == 0) & (Model.ATEN_IN_STATUS == 1 || Model.ATEN_IN_STATUS == 2 || Model.ATEN_IN_STATUS == 4))
                            {
                                @Html.ButtonLinkIndex(text: "Gerar Ordem de Serviço", action: "GerarOSAtendimento", controller: "Atendimento")
                            }
                            @if ((Model.ORDEM_SERVICO == null || Model.ORDEM_SERVICO.Count == 0) & (Model.ATEN_IN_STATUS == 1 || Model.ATEN_IN_STATUS == 2 || Model.ATEN_IN_STATUS == 4))
                            {
                                if (Model.CLIENTE != null)
                                {
                                    @Html.ButtonLinkIndex(text: "Gerar Tarefa Associada", action: "GerarTarefaAtendimento", controller: "Atendimento", routeValues: new { cliente = Model.CLIENTE.CLIE_NM_NOME })
                                }
                            }
                            @Html.ButtonLinkIndex(text: "Voltar", action: "MontarTelaAtendimento", controller: "Atendimento")
                        </div>
                    </row>
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="@ViewBag.DadosGerais"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Anexos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Cancelamento</a></li>
                            <li class="@ViewBag.Acompanhamento"><a data-toggle="tab" href="#tab-4">Acompanhamentos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-5">Agendamento</a></li>
                            <li class="@ViewBag.AgenLista"><a data-toggle="tab" href="#tab-6">Agendamentos - Lista</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-7">Observações</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-8">Ordens de Serviço</a></li>
                        </ul>
                        <div class="tab-content">
                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane @ViewBag.DadosGerais">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarAtendimento", "Atendimento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição de Atendimento", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.ATEN_CD_ID)
                                                    @Html.HiddenFor(m => m.ATEN_DS_CANCELAMENTO)
                                                    @Html.HiddenFor(m => m.ATEN_DS_ENCERRAMENTO)
                                                    @Html.HiddenFor(m => m.ATEN_DT_CANCELAMENTO)
                                                    @Html.HiddenFor(m => m.ATEN_DT_ENCERRAMENTO)
                                                    @Html.HiddenFor(m => m.ATEN_HR_CANCELAMENTO)
                                                    @Html.HiddenFor(m => m.ATEN_HR_ENCERRAMENTO)
                                                    @Html.HiddenFor(m => m.ATEN_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.ATEN_IN_DESTINO)
                                                    @Html.HiddenFor(m => m.ATEN_IN_STATUS)
                                                    @Html.HiddenFor(m => m.ATEN_TX_OBSERVACOES)
                                                    @Html.HiddenFor(m => m.PEVE_CD_ID)
                                                    @Html.HiddenFor(m => m.ATEN_HR_INICIO)
                                                    @Html.HiddenFor(m => m.CLIE_CD_ID)
                                                    @Html.HiddenFor(m => m.CAAT_CD_ID)
                                                    Cliente*
                                                    @Html.TextBoxFor(m => m.CLIENTE.CLIE_NM_NOME, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(m => m.CLIE_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Status
                                                    @if (Model.ATEN_IN_STATUS == 1)
                                                    {
                                                        @Html.TextBox("status", "Criado", new { style = "color: orange; font-weight: bold;", @class = "form-control", @readonly = "readonly" })
                                                    }
                                                    @*else if (Model.ATEN_IN_STATUS == 2)
                                                    {
                                                        @Html.TextBox("status", "Aguardando", new { style = "color: brown; font-weight: bold;", @class = "form-control", @readonly = "readonly" })
                                                    }*@
                                                    else if (Model.ATEN_IN_STATUS == 3)
                                                    {
                                                        @Html.TextBox("status", "Cancelado", new { style = "color: red; font-weight: bold;", @class = "form-control", @readonly = "readonly" })
                                                    }
                                                    else if (Model.ATEN_IN_STATUS == 4)
                                                    {
                                                        @Html.TextBox("status", "Em Execução", new { style = "color: green; font-weight: bold;", @class = "form-control", @readonly = "readonly" })
                                                    }
                                                    else if (Model.ATEN_IN_STATUS == 5)
                                                    {
                                                        @Html.TextBox("status", "Encerrado", new { style = "color: blue; font-weight: bold;", @class = "form-control", @readonly = "readonly" })
                                                    }
                                                    else
                                                    {
                                                        @Html.TextBox("status", "-", new { style = "color: blue; font-weight: bold;", @class = "form-control", @readonly = "readonly" })
                                                    }
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Categoria*
                                                    @Html.TextBoxFor(m => m.CATEGORIA_ATENDIMENTO.CAAT_NM_NOME, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Responsável
                                                    @Html.DropDownListFor(m => m.USUA_CD_ID, (SelectList)ViewBag.Usuarios, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.USUA_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Departamento
                                                    @Html.DropDownListFor(m => m.DEPT_CD_ID, (SelectList)ViewBag.Depts, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.DEPT_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Produto
                                                    @Html.TextBoxFor(m => m.PRODUTO.PROD_NM_NOME, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Serviço
                                                    @Html.TextBoxFor(m => m.SERVICO.SERV_NM_NOME, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Data Início
                                                    @Html.TextBoxFor(m => m.ATEN_DT_INICIO, new { @class = "form-control", autofocus = true, @readonly = "readonly", @style = "color:green; font-weight:bold" })
                                                    @Html.ValidationMessageFor(m => m.ATEN_DT_INICIO, "", new { @style = "color:red" })
                                                </div>
                                                @*<div class="col-lg-2 col-md-2 col-xs-12">
            Hora Início
            @Html.TextBoxFor(m => m.ATEN_HR_INICIO,  new { @class = "form-control", autofocus = true, @id="hora", @readonly="readonly", @style="color:green; font-weight:bold" })
            @Html.ValidationMessageFor(m => m.ATEN_HR_INICIO, "", new { @style = "color:red" })
        </div>*@
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Data Prevista
                                                    @Html.TextBoxFor(m => m.ATEN_DT_PREVISTA, new { @class = "form-control", autofocus = true, @id = "dtPrevista", @readonly = "readonly", @style = "font-weight:bold" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Tipo*
                                                    @Html.DropDownListFor(m => m.ATEN_IN_TIPO, (SelectList)ViewBag.Tipos, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.ATEN_IN_TIPO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-8 col-md-8 col-xs-12">
                                                    Assunto*
                                                    @Html.TextBoxFor(m => m.ATEN_NM_ASSUNTO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.ATEN_NM_ASSUNTO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Prioridade*
                                                    @Html.DropDownListFor(m => m.ATEN_IN_PRIORIDADE, (SelectList)ViewBag.Prioridade, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.ATEN_IN_PRIORIDADE, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Descrição*
                                                    @if (ViewBag.Perfil == "ADM")
                                                    {
                                                        @Html.TextAreaFor(m => m.ATEN_DS_DESCRICAO, new { @class = "form-control summernote", style = "width: 100%; height: 100px;", autofocus = true })
                                                    }
                                                    else
                                                    {
                                                        @Html.TextAreaFor(m => m.ATEN_DS_DESCRICAO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true, @readonly = "readonly" })
                                                    }
                                                    @Html.ValidationMessageFor(m => m.ATEN_DS_DESCRICAO, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            @if (Model.ATEN_IN_STATUS == 5)
                                            {
                                                <hr />
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data/Hora de Encerramento
                                                        @Html.TextBoxFor(m => m.ATEN_DT_ENCERRAMENTO, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                    </div>
                                                </div>
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        Anotações de Encerramento
                                                        @Html.TextAreaFor(m => m.ATEN_DS_ENCERRAMENTO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true, @readonly = "readonly" })
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição de Atendimento", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                            <h4>Anexos do Atendimento</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFileAtendimento", "Atendimento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.ATENDIMENTO_ANEXO != null && Model.ATENDIMENTO_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.ATENDIMENTO_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.ATAN_NM_TITULO</td>
                                                                            <td>@cond.ATAN_DT_ANEXO.ToShortDateString()</td>
                                                                            @if (cond.ATAN_IN_TIPO == 1)
                                                                            {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Arquivo</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.ATAN_IN_TIPO == 1 || cond.ATAN_IN_TIPO == 2)
                                                                                {
                                                                                    @Html.TableLinkDetails(cond.ATAN_CD_ID, "VerAnexoAtendimento", "fa-camera", "Visualizar")
                                                                                }
                                                                                @if (cond.ATAN_IN_TIPO == 3)
                                                                                {
                                                                                    <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.ATAN_AQ_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank"></a>
                                                                                }
                                                                                @Html.TableLinkDetails(cond.ATAN_CD_ID, "DownloadAtendimento", "fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                                            <input style="float:left; margin-right:5px;" type="file" name="file" id="file" class="btn btn-sm btn-warning" />
                                                            <input style="float:left;" type="submit" value="Incluir Anexo" class="btn btn-sm btn-success" />
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Cancelamento*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarAtendimento", "Atendimento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Data/Hora de Cancelamento
                                                    @Html.TextBoxFor(m => m.ATEN_DT_CANCELAMENTO, new { @class = "form-control", autofocus = true, @readonly = "readonly", @style = "color:red; font-weight:bold" })
                                                </div>
                                                @*<div class="col-lg-2 col-md-2 col-xs-12">
                                                        Hora Cancelamento
                                                        @Html.TextBoxFor(m => m.ATEN_HR_CANCELAMENTO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                    </div>*@
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Anotações de Cancelamento
                                                    @Html.TextAreaFor(m => m.ATEN_DS_CANCELAMENTO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true, @readonly = "readonly" })
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>

                            @*Acompanhamentos*@
                            <div id="tab-4" class="tab-pane @ViewBag.Acompanhamento">
                                <div class="panel-body">
                                    <hr />
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <h4>Acompanhamentos:</h4>
                                            @if (Model.ATENDIMENTO_ACOMPANHAMENTO != null && Model.ATENDIMENTO_ACOMPANHAMENTO.Count > 0)
                                            {
                                                foreach (var item in (Model.ATENDIMENTO_ACOMPANHAMENTO).OrderByDescending(a => a.ATAC_DT_ACOMPANHAMENTO))
                                                {
                                                    <div class="social-feed-box">
                                                        <div class="social-avatar">
                                                            <a href="" class="pull-left">
                                                                <img src="@Url.Content(item.USUARIO.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 94px; max-width: 90px;">
                                                            </a>
                                                            <div class="media-body">
                                                                <a href="#">
                                                                    @item.USUARIO.USUA_NM_NOME
                                                                </a>
                                                                <small class="text-muted">@item.ATAC_DT_ACOMPANHAMENTO.ToLongDateString() as @item.ATAC_DT_ACOMPANHAMENTO.ToShortTimeString()</small>
                                                            </div>
                                                        </div>
                                                        <div class="social-body">
                                                            <p>
                                                                @item.ATAC_DS_ACOMPANHAMENTO
                                                            </p>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        @Html.ButtonLinkIndex(text: "Incluir Acompanhamento", action: "IncluirAcompanhamento", controller: "Atendimento")
                                        @Html.ButtonLinkIndex(text: "Incluir Acompanhamento e Encerrar", action: "IncluirAcompanhamentoEncerrar", controller: "Atendimento")
                                    </div>
                                </div>
