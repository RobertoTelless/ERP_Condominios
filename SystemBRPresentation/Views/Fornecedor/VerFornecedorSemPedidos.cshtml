@using Presentation.Extensions
@using CrossCutting;
@using EntitiesServices.Work_Classes;
@model EntitiesServices.Model.FORNECEDOR
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Fornecedor</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaFornecedor", "Fornecedor")">Fornecedores</a>
            </li>
            <li class="active">
                <strong>Fornecedores sem Pedidos</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Fornecedores</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.SemPedidos</h1>
                    <div class="stat-percent font-bold text-navy">32% <i class="fa fa-level-up"></i></div>
                    <small>Fornecedores sem Pedidos</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Fornecedores sem Pedidos</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Filtros</h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        <i class="fa fa-wrench"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-user">
                                        <li>
                                            <a href="#">Config option 1</a>
                                        </li>
                                        <li>
                                            <a href="#">Config option 2</a>
                                        </li>
                                    </ul>
                                    <a class="close-link">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>

                            @using (Html.BeginForm("FiltrarSemPedido", "Fornecedor", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                <div class="ibox-content">
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            Nome
                            @Html.TextBoxFor(m => m.FORN_NM_NOME, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            Cidade
                            @Html.TextBoxFor(m => m.FORN_NM_CIDADE, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-2 col-md-2 col-xs-12">
                            UF
                            @Html.DropDownListFor(m => m.UF_CD_ID, (SelectList)ViewBag.UF, "Selecionar", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                        <div class="col-lg-12 col-md-12 col-xs-12">
                            @Html.ButtonActionSubmit(text: "Filtrar")
                            @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "Fornecedor", action: "RetirarFiltroFornecedorSemPedido")
                            @Html.ButtonLinkIndex(text: "Gerar Relatório", controller: "Fornecedor", action: "GerarRelatorioLista", routeValues: new { tipo = 3 })
                            @Html.ButtonLinkIndex(text: "Voltar", controller: "Fornecedor", action: "MontarTelaFornecedor")
                        </div>
                    </div>
                </div>}
                        </div>
                    </div>
                </div>

                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">Fechar</button>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>}
                    <div class="row">
                        @if ((ViewBag.Listas as List<EntitiesServices.Model.FORNECEDOR>).Count > 0)
                        {
            <table class="table table-striped table-bordered table-hover dataTables-example">
                <thead style="background-color:lightsteelblue">
                    <tr>
                        <th>Categoria</th>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>CNPJ</th>
                        <th>E-Mail</th>
                        <th>Telefone</th>
                        <th>Cidade</th>
                        <th>UF</th>
                        <th></th>
                        <th class="td-one-action">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.FORNECEDOR>))
                    {
    <tr>
        <td>@cond.CATEGORIA_FORNECEDOR.CAFO_NM_NOME</td>
        <td>@cond.FORN_NM_NOME</td>
        <td>@cond.FORN_NR_CPF</td>
        <td>@cond.FORN_NR_CNPJ</td>
        <td>@cond.FORN_NM_EMAIL</td>
        <td>@cond.FORN_NM_TELEFONES</td>
        <td>@cond.FORN_NM_CIDADE</td>
        @if (cond.UF != null)
        {
<td>@cond.UF.UF_SG_SIGLA</td>
 }
else
{
<td>-</td>
}
        @if (!String.IsNullOrEmpty(cond.FORN_AQ_FOTO))
        {
<td><img src="@Url.Content(cond.FORN_AQ_FOTO)" style="width: auto; height: auto; max-height: 55px; max-width: 45px;"></td>
 }
else
{
<td><img src="~/Images/a8.jpg" style="width: auto; height: auto; max-height: 55px; max-width: 45px;"></td>
}
        <td class="td-one-action">
            @Html.TableLinkDetails(cond.FORN_CD_ID, "EditarFornecedor", "fa-edit", "Editar/Consultar")
        </td>
    </tr>
}
                </tbody>
            </table>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    
   
    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
            $("#cnpj").mask("99.999.999/9999-99");
        });
    </script>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

