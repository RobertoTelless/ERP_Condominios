@using Presentation.Extensions
@using CrossCutting;
@using EntitiesServices.Work_Classes;
@model EntitiesServices.Model.CONTA_PAGAR
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Fornecedores</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarAdmin", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaFornecedor", "Foenecedor")">Fornecedores</a>
            </li>
            <li class="active">
                <strong>Pagamentos em Atraso</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Fornecedores</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.Atrasos</h1>
                    <div class="stat-percent font-bold text-navy">32% <i class="fa fa-level-up"></i></div>
                    <small>Pagamentos em Atraso</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Pagamentos em Atraso</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Filtros</h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        <i class="fa fa-wrench"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-user">
                                        <li>
                                            <a href="#">Config option 1</a>
                                        </li>
                                        <li>
                                            <a href="#">Config option 2</a>
                                        </li>
                                    </ul>
                                    <a class="close-link">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>

                            @using (Html.BeginForm("FiltrarPagamentoAtrasado", "Fornecedor", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                <div class="ibox-content">
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            Nome
                            @Html.TextBoxFor(m => m.FORNECEDOR.FORN_NM_NOME, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            Data Vencimento
                            @Html.TextBoxFor(m => m.CAPA_DT_VENCIMENTO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true })
                        </div>
                    </div>
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                        <div class="col-lg-12 col-md-12 col-xs-12">
                            @Html.ButtonActionSubmit(text: "Filtrar")
                            @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "Fornecedor", action: "RetirarFiltroAtraso")
                            @Html.ButtonLinkIndex(text: "Gerar Relatório", controller: "Fornecedor", action: "GerarRelatorioListaCP")
                            @Html.ButtonLinkIndex(text: "Voltar", controller: "Fornecedor", action: "MontarTelaFornecedor")
                        </div>
                    </div>
                </div>}
                        </div>
                    </div>
                </div>

                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">Fechar</button>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>}
                    <div class="row">
                        @if ((ViewBag.Listas as List<EntitiesServices.Model.CONTA_PAGAR>).Count > 0)
                        {
            <table class="table table-striped table-bordered table-hover dataTables-example">
                <thead style="background-color:lightsteelblue">
                    <tr>
                        <th>Fornecedor</th>
                        <th>Vencimento</th>
                        <th>Atraso</th>
                        <th>Descrição</th>
                        <th>Contato</th>
                        <th class="td-one-action">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.CONTA_PAGAR>))
                    {
    <tr>
        <td>@cond.FORNECEDOR.FORN_NM_NOME</td>
        <td>@cond.CAPA_DT_VENCIMENTO.Value.ToShortDateString()</td>
        <td>@cond.CAPA_NR_ATRASO</td>
        <td>@cond.CAPA_DS_DESCRICAO</td>
        <td>@cond.FORNECEDOR.FORN_NM_TELEFONES</td>
        <td class="td-one-action">
            @Html.TableLinkDetails(cond.CAPA_CD_ID, "VerLancamentoAtraso", "fa-edit", "Ver Lançamento Completo")
        </td>
    </tr>
}
                </tbody>
            </table>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    
   
    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
            $("#cnpj").mask("99.999.999/9999-99");
        });
    </script>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

