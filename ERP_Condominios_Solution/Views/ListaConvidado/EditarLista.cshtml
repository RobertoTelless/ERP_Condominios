@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.ListaConvidadoViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-title"> 
        <h3 class="title">Lista de Convidados</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaLista", "ListaConvidado")">Lista de Convidados</a>
            </li>
            <li class="active">
                <strong>Lista de Convidados - Edição</strong>
            </li>
        </ol>
        <br />
    </div>

    @*TABS - PRINCIPAL*@
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista de Convidados - Edição</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="form-group">
                        <br />
                        @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseLista", controller: "ListaConvidado")
                    </div>
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Convidados</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Comentários</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-4">Anexos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-5">Observações</a></li>
                        </ul>
                        <div class="tab-content">
                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarLista", "ListaConvidado", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                @if (ViewBag.Perfil == "MOR")
                                                {
                                                    <div class="col-lg-2 col-md-3 col-xs-12">
                                                        @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                        @Html.HiddenFor(m => m.LICO_DT_CADASTRO)
                                                        @Html.HiddenFor(m => m.LICO_IN_ATIVO)
                                                        @Html.HiddenFor(m => m.LICO_CD_ID)
                                                        Unidade
                                                        @Html.TextBoxFor(m => m.UNIDADE.UNID_NM_EXIBE, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="col-lg-2 col-md-3 col-xs-12">
                                                        @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                        @Html.HiddenFor(m => m.LICO_DT_CADASTRO)
                                                        @Html.HiddenFor(m => m.LICO_IN_ATIVO)
                                                        @Html.HiddenFor(m => m.LICO_CD_ID)
                                                        Unidade*
                                                        @Html.DropDownListFor(m => m.UNID_CD_ID, (SelectList)ViewBag.Unidades, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.UNID_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                }
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Nome da Lista*
                                                    @Html.TextBoxFor(m => m.LICO_NM_LISTA, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.LICO_NM_LISTA, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Data do Evento*
                                                    @Html.TextBoxFor(m => m.LICO_DT_EVENTO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id = "data" })
                                                    @Html.ValidationMessageFor(m => m.LICO_DT_EVENTO, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Vinculado a Reserva?
                                                    @Html.DropDownListFor(m => m.RESE_CD_ID, (SelectList)ViewBag.Reservas, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.RESE_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>                                        
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição da Lista de Convidados", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Convidados*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">                                          
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;"> 
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Convidados</h4>
                                                <br />
                                                @if (Model.CONVIDADO != null)
                                                {
                                                    if (Model.CONVIDADO.Count > 0)
                                                    {
                                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                                            <thead style ="background-color:lightsteelblue">
                                                                <tr>
                                                                    <th>Nome</th>
                                                                    <th>Hora de Chegada</th>
                                                                    <th class="td-one-action">Ações</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var cond in (Model.CONVIDADO))
                                                                {
                                                                    <tr>
                                                                        <td>@cond.CONV_NM_CONVIDADO</td>
                                                                        @if (cond.CONV_DT_CHEGADA != null)
                                                                        {
                                                                            <td>@cond.CONV_DT_CHEGADA.Value.ToShortDateString() @cond.CONV_DT_CHEGADA.Value.ToShortTimeString()</td>
                                                                        }
                                                                        else
                                                                        {
                                                                            <td>-</td>
                                                                        }
                                                                        <td class="td-one-action">
                                                                            @Html.TableLinkDetails(cond.CONV_CD_ID, "EditarConvidado","fa-edit", "ListaConvidado")
                                                                            @if (cond.CONV_IN_ATIVO == 1)
                                                                            {
                                                                                <span style="color: #337ab7; cursor:pointer;" alt="Excluir" class="tbl-link fa-lg fa fa-trash-o" onclick="ShowModalExcluir('/ListaConvidado/ExcluirConvidado/@cond.CONV_CD_ID')" title="Excluir"></span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <span style="color: #337ab7; cursor:pointer;" alt="Reativar" class="tbl-link fa-lg fa fa-refresh" onclick="ShowModalReativar('/ListaConvidado/ReativarConvidado/@cond.CONV_CD_ID')" title="Reativar"></span>
                                                                            }
                                                                        </td>
                                                                        @*}*@
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.ButtonLinkIndex(text: "Incluir Convidado", action: "IncluirConvidado", controller: "ListaConvidado")
                                    </div>
                                </div>
                            </div>

                            @*Acompanhamentos*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    <hr />
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <h4>Comentários:</h4>
                                            @if (Model.LISTA_CONVIDADO_COMENTARIO.Count > 0)
                                            {
                                                foreach (var item in (Model.LISTA_CONVIDADO_COMENTARIO).OrderByDescending(a => a.LCCM_DT_COMENTARIO))
                                                {
                                                    <div class="social-feed-box">
                                                        <div class="social-avatar">
                                                            <a href="" class="pull-left">
                                                                <img src="@Url.Content(item.USUARIO.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 94px; max-width: 90px;">
                                                            </a>
                                                            <div class="media-body">
                                                                <a href="#">
                                                                    @item.USUARIO.USUA_NM_NOME
                                                                </a>
                                                                <small class="text-muted">@item.LCCM_DT_COMENTARIO.ToLongDateString() @item.LCCM_DT_COMENTARIO.ToShortTimeString()</small>
                                                            </div>
                                                        </div>
                                                        <div class="social-body">
                                                            <p>
                                                                @item.LCCM_DS_COMENTARIO
                                                            </p>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        @Html.ButtonLinkIndex(text: "Incluir Comentário", action: "IncluirComentarioLista", controller: "ListaConvidado", routeValues: new { id = Model.LICO_CD_ID })
                                    </div>
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-4" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12"> 
                                            <h4>Anexos</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFileLista", "ListaConvidado", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id="pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.LISTA_CONVIDADO_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style ="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.LISTA_CONVIDADO_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.LCAN_NM_TITULO</td>
                                                                            <td>@cond.LCAN_DT_ANEXO.Value.ToShortDateString()</td>
                                                                            @if (cond.LCAN_IN_TIPO == 1)
	                                                                        {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Arquivo</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.LCAN_IN_TIPO == 1)
	                                                                            {
                                                                                    @Html.TableLinkDetails(cond.LCAN_CD_ID, "VerAnexoLista","fa-camera", "Visualizar")
	                                                                            }
                                                                                @if (cond.LCAN_IN_TIPO == 3)
                                                                                {
                                                                                    <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.LCAN_AQ_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank"></a>
                                                                                }
                                                                                @Html.TableLinkDetails(cond.LCAN_CD_ID, "DownloadLista","fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                        <div cçass="form-group">
                                                            <br />
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                <input style="float: left; margin-right: 5px;" type="file" name="file" id="file" class="btn btn-sm btn-warning"/>
                                                                <input style="float: left;" type="submit" value="Incluir Anexo" class="btn btn-sm btn-success" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Observações*@
                            <div id="tab-5" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarLista", "ListaConvidado", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;"> 
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.LICO_CD_ID)
                                                    @Html.HiddenFor(m => m.LICO_DT_CADASTRO)
                                                    @Html.HiddenFor(m => m.LICO_DT_EVENTO)
                                                    @Html.HiddenFor(m => m.LICO_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.LICO_NM_CONVIDADO)
                                                    @Html.HiddenFor(m => m.LICO_NM_LISTA)
                                                    @Html.HiddenFor(m => m.RESE_CD_ID)
                                                    @Html.HiddenFor(m => m.UNID_CD_ID)
                                                    @Html.HiddenFor(m => m.USUA_CD_ID)
                                                    Observações
                                                    @Html.TextAreaFor(m => m.LICO_TX_OBSERVACOES, new { @class = "form-control", style = "width: 100%; height: 300px;", autofocus = true})
                                                    @Html.ValidationMessageFor(m => m.LICO_TX_OBSERVACOES, "",new { @style="color:red" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição da Lista de Convidados", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <br />
                                @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseLista", controller: "ListaConvidado")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </div>
    </div>
</div>

