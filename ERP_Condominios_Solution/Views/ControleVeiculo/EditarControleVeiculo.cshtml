@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.ControleVeiculoViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<style>
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Controle de Veículos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaControleVeiculo", "ControleVeiculo")">Controle de Veículos</a>
            </li>
            <li class="active">
                <strong>Controle de Veículos - Edição/Baixa</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Controle de Veículos - Edição/Baixa</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="form-group">
                        <br />
                        @Html.ButtonLinkIndex(text: "Emitir Notificação", action: "GerarNotificacaoControleVeiculo", controller: "ControleVeiculo")
                        @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseControleVeiculo", controller: "ControleVeiculo")
                    </div>
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Comentários</a></li>
                        </ul>
                        <div class="tab-content">   

                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarControleVeiculo", "ControleVeiculo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px; margin-bottom: 2px; margin-left: 2px; margin-top: 2px; margin-right: 2px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12" style="color:green;font-weight:bold">
                                                    Data/Hora Entrada
                                                    @Html.TextBoxFor(m => m.COVE_DT_ENTRADA, "{0:dd/MM/yyyy HH:mm}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12" style="color:green;font-weight:bold">
                                                    Data/Hora Prevista
                                                    @Html.TextBoxFor(m => m.COVE_DT_PREVISAO_SAIDA, "{0:dd/MM/yyyy HH:mm}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12" style="color:darkblue;font-weight:bold">
                                                    Data/Hora Saída
                                                    @Html.TextBoxFor(m => m.COVE_DT_SAIDA, new { @class = "form-control datetime-picker", autofocus = true, @id = "saida", @style = "font-weight:bold" })
                                                    @Html.ValidationMessageFor(m => m.COVE_DT_SAIDA, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.COVE_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.COVE_CD_ID)
                                                    Tipo de Veículo
                                                    @Html.TextBoxFor(m => m.TIPO_VEICULO.TIVE_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Unidade
                                                    @Html.TextBoxFor(m => m.UNIDADE.UNID_NM_EXIBE, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12" style="color:darkblue;font-weight:bold">
                                                    Placa
                                                    @Html.TextBoxFor(m => m.COVE_NM_PLACA, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Marca/Modelo
                                                    @Html.TextBoxFor(m => m.COVE_NM_MARCA, new { @class = "form-control", autofocus = true, @readonly="readonly"  })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Cor
                                                    @Html.TextBoxFor(m => m.COVE_NM_COR, new { @class = "form-control", autofocus = true, @readonly="readonly"  })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Motorista/Empresa
                                                    @Html.TextBoxFor(m => m.COVE_NM_PESSOA, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Fornecedor
                                                    @Html.TextBoxFor(m => m.FORNECEDOR.FORN_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Observações
                                                    @Html.TextBoxFor(m => m.COVE_DS_DESCRICAO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.COVE_DS_DESCRICAO, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma Edição/Baixa do Registro de Entrada", htmlAttributes: new { id = "basictoast", style = "margin-bottom: -35px;" })
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Acompanhamentos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <h4>Comentários:</h4>
                                            @if (Model.CONTROLE_VEICULO_ACOMPANHAMENTO.Count > 0)
                                            {
                                                foreach (var item in (Model.CONTROLE_VEICULO_ACOMPANHAMENTO).OrderByDescending(a => a.CVAC_DT_ACOMPANHAMENTO))
                                                {
                                                    <div class="social-feed-box">
                                                        <div class="social-avatar">
                                                            <a href="" class="pull-left">
                                                                <img src="@Url.Content(item.USUARIO.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                            </a>
                                                            <div class="media-body">
                                                                <a href="#">
                                                                    @item.USUARIO.USUA_NM_NOME
                                                                </a>
                                                                <small class="text-muted">@item.CVAC_DT_ACOMPANHAMENTO.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                                            </div>
                                                        </div>
                                                        <div class="social-body">
                                                            <p>
                                                                @item.CVAC_DS_TEXTO
                                                            </p>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <br />
                                    @if (Model.COVE_DT_SAIDA != null)
                                    {
                                        <div class="form-group">
                                            @Html.ButtonLinkIndex(text: "Incluir Novo Comentário", action: "IncluirAcompanhamentoControleVeiculo", controller: "ControleVeiculo")
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <br />
                    @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseControleVeiculo", controller: "ControleVeiculo")
                </div>
            </div>
        </div>
    </div>
</div>


