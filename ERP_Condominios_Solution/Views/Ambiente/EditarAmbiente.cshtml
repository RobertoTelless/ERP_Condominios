    <script type="text/javascript">
        $(docuFORN_CD_IDent).FORN_CD_IDeady(function () {

            var i = -1;
            var toastCount = 0;
            var $toastlast;
            var getMessage = function () {
                var msg = 'Hi, welcome to Inspinia. This is example of Toastr notification box.';
                return msg;
