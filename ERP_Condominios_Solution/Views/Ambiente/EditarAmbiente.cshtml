@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.AmbienteViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-title">
        <h3 class="title">Ambientes</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaAmbiente", "Ambiente")">Ambientes</a>
            </li>
            <li class="active">
                <strong>Ambiente - Edição</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Ambiente - Edição</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="form-group">
                        <br />
                        @Html.ButtonLinkIndex(text: "Gerar Relatório", action: "GerarRelatorioDetalhe", controller: "Ambiente")
                        @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseAmbiente", controller: "Ambiente")
                    </div>
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-7">Reservas Vinculadas</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Imagens & Anexos</a></li>
                            @if (Model.AMBI_IN_GRATUITO == 2)
                            {
                                <li class=""><a data-toggle="tab" href="#tab-3" id="preco">Preços</a></li>
                            }
                            @if (Model.AMBI_IN_CHAVE == 1)
                            {
                                <li class=""><a data-toggle="tab" href="#tab-4" id="chave">Chaves</a></li>
                            }
                            <li class=""><a data-toggle="tab" href="#tab-5">Descrição</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-6">Indicadores</a></li>
                        </ul>
                        <div class="tab-content">

                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarAmbiente", "Ambiente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row" style="width: 100%;">
                                            <div class="col-lg-1 col-md-1 col-xs-12">
                                                <div style="text-align: center; margin-top: 25px; line-height: 10px;">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.AMBI_AQ_FOTO)
                                                    @Html.HiddenFor(m => m.AMBI_AQ_LISTA)
                                                    @Html.HiddenFor(m => m.AMBI_AQ_NORMAS_USO)
                                                    @Html.HiddenFor(m => m.AMBI_CD_ID)
                                                    @Html.HiddenFor(m => m.AMBI_DT_CADASTRO)
                                                    @Html.HiddenFor(m => m.AMBI_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.AMBI_NM_DESCRICAO)
                                                    @if (!String.IsNullOrEmpty(Model.AMBI_AQ_FOTO))
                                                    {
                                                        <img src="@Url.Content(Model.AMBI_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.AMBI_NM_AMBIENTE', '@Url.Content(Model.AMBI_AQ_FOTO)')">                                                    }
                                                    else
                                                    {
                                                        <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                    <br />
                                                    <br />
                                                    <br />
                                                    <br />
                                                    <br />
                                                </div>
                                            </div>
                                            <div class="col-md-11">
                                                <div class="row">
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                        @Html.HiddenFor(m => m.AMBI_DT_CADASTRO)
                                                        @Html.HiddenFor(m => m.AMBI_IN_ATIVO)
                                                        Tipo de Ambiente*
                                                        @Html.DropDownListFor(m => m.TIAM_CD_ID, (SelectList)ViewBag.Cats, "Selecionar", new { @class = "form-control", autofocus = true, @id = "pessoa" })
                                                        @Html.ValidationMessageFor(m => m.TIAM_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-4 col-md-4 col-xs-12" id="razao">
                                                        Nome*
                                                        @Html.TextBoxFor(m => m.AMBI_NM_AMBIENTE, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.AMBI_NM_AMBIENTE, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Lotação*
                                                        @Html.TextBoxFor(m => m.AMBI_NR_LOTACAO, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.AMBI_NR_LOTACAO, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Início*
                                                        <div class='input-group date' id='datetimepicker3'>
                                                            @Html.TextBoxFor(m => m.AMBI_HR_INICIO, new { @class = "form-control time-picker", autofocus = true, @id = "hora" })
                                                            @Html.ValidationMessageFor(m => m.AMBI_HR_INICIO, "", new { @style = "color:red" })
                                                            <span class="input-group-addon">
                                                                <span style="cursor: pointer;" class="glyphicon glyphicon-time"></span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Término*
                                                        <div class='input-group date' id='datetimepicker4'>
                                                            @Html.TextBoxFor(m => m.AMBI_HR_FINAL, new { @class = "form-control time-picker", autofocus = true, @id = "hora1" })
                                                            @Html.ValidationMessageFor(m => m.AMBI_HR_FINAL, "", new { @style = "color:red" })
                                                            <span class="input-group-addon">
                                                                <span style="cursor: pointer;" class="glyphicon glyphicon-time"></span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <br />
                                                <div class="row">
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Tem Chave?
                                                        @Html.DropDownListFor(m => m.AMBI_IN_CHAVE, (SelectList)ViewBag.Chave, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.AMBI_IN_CHAVE, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12" id="razao">
                                                        Gratuito?
                                                        @Html.DropDownListFor(m => m.AMBI_IN_GRATUITO, (SelectList)ViewBag.Gratuito, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.AMBI_IN_GRATUITO, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Dias de Reserva
                                                        @Html.TextBoxFor(m => m.AMBI_NR_DIAS_CHAVE, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.AMBI_NR_DIAS_CHAVE, "", new { @style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição de Ambiente", htmlAttributes: new { id = "basictoast", style = "margin-bottom: -35px;" })
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Reservas Vinculados*@
                            <div id="tab-7" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="ibox float-e-margins">
                                                <div class="ibox-title">
                                                    <span class="label label-primary pull-right">Hoje</span>
                                                    <h5>Reservas Vinculadas</h5>
                                                </div>
                                                <div class="ibox-content">
                                                    @if (Model.RESERVA.Count > 0)
                                                    {
                                                        <table class="table table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>Data</th>
                                                                    <th>Unidade</th>
                                                                    <th>Finalidade</th>
                                                                    <th>Status</th>
                                                                    <th class="td-one-action">Ações</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var cond in (Model.RESERVA.OrderByDescending(a => a.RESE_DT_EVENTO)))
                                                                {
                                                                    <tr>
                                                                        <td>@cond.RESE_DT_EVENTO.ToShortDateString()</td>
                                                                        <td>@cond.UNIDADE.UNID_NM_EXIBE</td>
                                                                        <td>@cond.FINALIDADE_RESERVA.FIRE_NM_NOME</td>
                                                                        @if (cond.RESE_IN_STATUS == 1)
                                                                        {
                                                                            <td>Em Aprovação</td>
                                                                        }
                                                                        else if (cond.RESE_IN_STATUS == 2)
                                                                        {
                                                                            <td>Aprovada</td>
                                                                        }
                                                                        else if (cond.RESE_IN_STATUS == 3)
                                                                        {
                                                                            <td>Liberada</td>
                                                                        }
                                                                        else if (cond.RESE_IN_STATUS == 4)
                                                                        {
                                                                            <td>Realizada</td>
                                                                        }
                                                                        else if (cond.RESE_IN_STATUS == 5)
                                                                        {
                                                                            <td>Cancelada</td>
                                                                        }
                                                                        <td class="td-one-action">
                                                                            @Html.TableLinkDetails(cond.RESE_CD_ID, "VerReserva", "fa-edit", "Consultar")
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.ButtonLinkIndex(text: "Ir para Reservas", action: "MontarTelaReservas", controller: "Reserva")
                                    </div>
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-10 col-md-10 col-xs-12">
                                            <div class="form-group">
                                                <h4>Foto Principal</h4>
                                                @using (Html.BeginForm("UploadFotoAmbiente", "Ambiente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container3" }))
                                                {
                                                    <div class="form-group">
                                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                                            <input style="float: left; margin-right: 5px;" type="file" accept=".jpg, .png, .jpeg, .gif|images/*" name="file" id="file" class="btn btn-sm btn-warning" />
                                                            <input style="float: left;" type="submit" value="Incluir Foto Principal" class="btn btn-sm btn-success" />
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-sm-12">
                                                    <br />
                                                    @if (!String.IsNullOrEmpty(Model.AMBI_AQ_FOTO))
                                                    {
                                                        <img src="@Url.Content(Model.AMBI_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row">
                                        @*<hr />*@
                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                            <h4>Anexos</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFileAmbiente", "Ambiente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.AMBIENTE_IMAGEM.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.AMBIENTE_IMAGEM))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.AMIN_NM_TITULO</td>
                                                                            <td>@cond.AMIM_DT_CADASTRO.ToShortDateString()</td>
                                                                            @if (cond.AMIM_IN_TIPO == 1)
                                                                            {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else if (cond.AMIM_IN_TIPO == 2)
                                                                            {
                                                                                <td>Vídeo</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Arquivo</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.AMIM_IN_TIPO == 1 || cond.AMIM_IN_TIPO == 2)
                                                                                {
                                                                                    @Html.TableLinkDetails(cond.AMIM_CD_ID, "VerAnexoAmbiente", "fa-camera", "Visualizar")
                                                                                }
                                                                                @if (cond.AMIM_IN_TIPO == 3)
                                                                                {
                                                                                    <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.AMIM_NM_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank" ></a>
                                                                                }
                                                                                @Html.TableLinkDetails(cond.AMIM_CD_ID, "DownloadAmbiente", "fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                        <div class="form-group">
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                <input style="float: left; margin-right: 5px;" type="file" name="file" id="file" class="btn btn-sm btn-warning" />
                                                                <input style="float: left; margin-right: 5px;" type="submit" value="Incluir Anexo" class="btn btn-sm btn-success" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Preços*@
                            @if (Model.AMBI_IN_GRATUITO == 2)
                            {
                                <div id="tab-3" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <h4>Preços</h4>
                                                    <br />
                                                    @if (Model.AMBIENTE_CUSTO.Count > 0)
                                                    {
                                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                                            <thead style="background-color:lightsteelblue">
                                                                <tr>
                                                                    <th>Nome</th>
                                                                    <th>Valor Base</th>
                                                                    <th>Valor Reduzido</th>
                                                                    <th>Valor Hora</th>
                                                                    <th class="td-one-action">Ações</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var cond in (Model.AMBIENTE_CUSTO))
                                                                {
                                                                    <tr>
                                                                        <td>@cond.AMCU_DS_DESCRICAO</td>
                                                                        <td>@CrossCutting.Formatters.DecimalFormatter(cond.AMCU_VL_BASE)</td>
                                                                        <td>@CrossCutting.Formatters.DecimalFormatter(cond.AMCU_VL_REDUZIDO.Value)</td>
                                                                        <td>@CrossCutting.Formatters.DecimalFormatter(cond.AMCU_VL_HORA)</td>
                                                                        <td class="td-one-action">
                                                                            @Html.TableLinkDetails(cond.AMCU_CD_ID, "EditarAmbienteCusto", "fa-edit", "Editar/Consultar")
                                                                            @if (cond.AMCU_NM_ATIVO == 1)
                                                                            {
                                                                                <span style="color: #337ab7; cursor:pointer;" alt="Excluir" class="tbl-link fa-lg fa fa-trash-o" onclick="ShowModalExcluir('/Ambiente/ExcluirAmbienteCusto/@cond.AMCU_CD_ID')" title="Excluir"></span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <span style="color: #337ab7; cursor:pointer;" alt="Reativar" class="tbl-link fa-lg fa fa-refresh" onclick="ShowModalReativar('/Ambiente/ReativarAmbienteCusto/@cond.AMCU_CD_ID')" title="Reativar"></span>
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonLinkIndex(text: "Incluir Novo Preço", action: "IncluirAmbienteCusto", controller: "Ambiente")
                                        </div>
                                    </div>
                                </div>
                            }

                            @*Chaves*@
                            @if (Model.AMBI_IN_CHAVE == 1)
                            {
                                <div id="tab-4" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <h4>Movimentação de Chaves</h4>
                                                    <br />
                                                    @if (Model.AMBIENTE_CHAVE.Count > 0)
                                                    {
                                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                                            <thead style="background-color:lightsteelblue">
                                                                <tr>
                                                                    <th>Data Entrega</th>
                                                                    <th>Unidade</th>
                                                                    <th>Responsável</th>
                                                                    <th>Data Prevista</th>
                                                                    <th>Data Devolução</th>
                                                                    <th>Situação</th>
                                                                    <th>Observações</th>
                                                                    <th class="td-one-action">Ações</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var cond in (Model.AMBIENTE_CHAVE))
                                                                {
                                                                    <tr>
                                                                        <td>@cond.AMCH_DT_ENTREGA.ToShortDateString()</td>
                                                                        <td>@cond.UNIDADE.UNID_NM_EXIBE</td>
                                                                        <td>@cond.USUARIO.USUA_NM_NOME</td>
                                                                        <td>@cond.AMCH_DT_PREVISTA.ToShortDateString()</td>
                                                                        @if (cond.AMCH_DT_DEVOLUCAO != null)
                                                                        {
                                                                            <td>@cond.AMCH_DT_DEVOLUCAO.Value.ToShortDateString()</td>
                                                                            <td><span class="badge badge-primary">Devolvida</span></td>
                                                                        }
                                                                        else if (cond.AMCH_DT_DEVOLUCAO == null & cond.AMCH_DT_PREVISTA >= DateTime.Today.Date)
                                                                        {
                                                                            <td>-</td>
                                                                            <td><span class="badge badge-warning">Pendente</span></td>
                                                                        }
                                                                        else if (cond.AMCH_DT_DEVOLUCAO == null & cond.AMCH_DT_PREVISTA < DateTime.Today.Date)
                                                                        {
                                                                            <td>-</td>
                                                                            <td><span class="badge badge-danger">Em Atraso</span></td>
                                                                        }
                                                                        else
                                                                        {
                                                                            <td>-</td>
                                                                            <td></td>
                                                                        }  
                                                                        <td>@cond.AMCH_TX_OBSERVACOES</td>
                                                                        <td class="td-one-action">
                                                                            @if (cond.AMCH_DT_DEVOLUCAO == null)
                                                                            {
                                                                                @Html.TableLinkDetails(cond.AMCH_CD_ID, "EditarAmbienteChave", "fa-edit", "Editar")
                                                                                @Html.TableLinkDetails(cond.AMCH_CD_ID, "DevolverAmbienteChave", "fa-reply", "Devolução")
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonLinkIndex(text: "Incluir Nova Entrega de Chave", action: "IncluirAmbienteChave", controller: "Ambiente")
                                        </div>
                                    </div>
                                </div>
                            }

                            @*Descrição*@
                            <div id="tab-5" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarAmbiente", "Ambiente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.AMBI_AQ_FOTO)
                                                    @Html.HiddenFor(m => m.AMBI_AQ_LISTA)
